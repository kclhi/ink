{
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime"
    ],
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react"
    ],
    "rules": {
      "camelcase": ["error", { 
        "allow": [""]
      }],
      "no-console": 1,
      "space-infix-ops": "error",
      "no-duplicate-imports": "error",
      "space-before-function-paren": ["error", "never"],
      "keyword-spacing": ["error", { 
        "overrides": {
          "if": { "after": false },
          "for": { "after": false },
          "while": { "after": false },
          "catch": { "after": false }
        } 
      }]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  